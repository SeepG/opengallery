<!DOCTYPE html>
<html>
  <head>
    <title>Open Gallery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Playfair+Display" rel="stylesheet"> 
  </head>

  <body>
    <%= render 'layouts/shared/nav' %>
    <% if notice %>
        <div class=""><h3 class="mt-2 text-dark text-center p-3 border-bottom border-top"><%= notice %></h3></div>
    <% end %>
    <% if alert %>
        <div class=""><h3 class="mt-2 text-dark text-center p-3 border-bottom border-top"><%= alert %></h3></div>
    <% end %>
    <%= yield %>
    <%= render 'layouts/shared/footer' %>
  </body>
</html>