<div class="container-fluid">
  <div class="d-flex flex-wrap justify-content-around mt-5">
    <% @pieces.each do |piece| %>
      <div class="card mb-5 shadow" style="width: 40%;">
        <% if piece.uploaded_image.attached? %>
          <%= image_tag piece.uploaded_image.service_url, class: "card-img-top cover" %>
        <% end %> 
        <div class="card-body">
          <div class="row pb-3">
            <div class="col">
              <h3 class="card-title"><%= piece.name %></h3>
            </div>
            <div class="col">
              <p class="text-muted text-right">by <%= piece.workshop.user.full_name %></p>
              <% piece.tags.each do |tag| %>
                <div class="badge badge-light float-right border"><%= tag %></div><br />
              <% end %>
            </div>
          </div>
          <%= link_to 'More Info', piece_path(piece.id), class: 'btn white-on-orange' %>
          <% if piece.sold? %>
            <span class="badge badge-danger">Sold!</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>